<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/favorites_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:clickable="true"
        android:columnCount="2"
        android:focusable="true"
        android:rowCount="5">

        <ImageButton
            android:id="@+id/IronMaiden"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/ironmaiden"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/Mettalica"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/metallica"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/GunsnRoses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/gunsnroses"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/Beethoven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/beethoven"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/TheOffspring"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/offspring"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/Bjork"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/bjork"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/PeggyLee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/peggylee"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/ElvisPresley"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:alpha=".75"
            android:background="@drawable/elvispresley"
            android:clickable="true"
            android:focusable="true" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/backbuttonlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.65"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backwardbutton1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/backarrow"
            android:alpha="0.95" />

    </LinearLayout>

</RelativeLayout>

