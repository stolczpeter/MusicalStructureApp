<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/favorites_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="5">


        <ImageView
            android:id="@+id/IronMaiden"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/ironmaiden"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/Mettalica"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/metallica"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/GunsnRoses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/gunsnroses"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/Beethoven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/beethoven"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/TheOffspring"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/offspring"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/Bjork"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/bjork"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/PeggyLee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/peggylee"
            android:alpha=".75"/>

        <ImageView
            android:id="@+id/ElvisPresley"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/elvispresley"
            android:alpha=".75"/>

    </GridLayout>

</RelativeLayout>

