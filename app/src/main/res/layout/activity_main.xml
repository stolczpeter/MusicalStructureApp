<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.example.peterstolcz.musicalstructureapp.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.6"
        android:background="#000">

        <TextView
            android:id="@+id/menu"
            style="@style/MenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/menu"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:textStyle="bold" />

        <View
            android:layout_width="135dp"
            android:layout_height="4dp"
            android:layout_below="@+id/menu"
            android:layout_marginLeft="8dp"
            android:background="#fff">

        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/mymusicimage"
            style="@style/MenuStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mymusic"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="@string/menu"
            android:textSize="25sp" />

        <Button
            android:id="@+id/mymusic"
            style="@style/CustomStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/mainmenu1"
            android:textColor="#fff"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            style="@style/MenuStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/concert"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="@string/menu" />

        <Button
            android:id="@+id/genre"
            style="@style/ShuffleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/mainmenu2"
            android:textColor="#fff"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/menu3"
            style="@style/MenuStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/rock"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="@string/menu"
            android:textSize="25sp" />

        <Button
            android:id="@+id/artists"
            style="@style/CustomStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/mainmenu3"
            android:textColor="#fff"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/radioimage"
            style="@style/MenuStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="@string/menu"
            android:textSize="25sp" />

        <Button
            android:id="@+id/radio"
            style="@style/CustomStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/mainmenu4"
            android:textColor="#fff"
            android:textSize="30sp" />

    </RelativeLayout>

</LinearLayout>
